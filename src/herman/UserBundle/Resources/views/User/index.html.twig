{% extends 'layout.html.twig' %}
{% block body %}
<h2>Users</h2>

<table border=1>
    <tr>
        <th>Username</th>
        <th>Nombre</th>
        <th>Apellidos</th>
        <th>Email</th>
        <th>Role</th>
        <th>Created</th>
        <th>Updated</th>
        <th>Acciones</th>
    </tr>
    {% for user in users %}
        <tr>
            <td>{{ user.username }}</td>
            <td>{{ user.firstName }}</td>
            <td>{{ user.lastName }}</td>
            <td>{{ user.email }}</td>
            <td>
                {% if user.role == 'ROLE_ADMIN' %}
                    <strong>Administrador</strong>
                {% else %}
                    <strong>Usuario</strong>
                {% endif %}
            </td>
            <td>{{ user.createdAt|date('d-m-Y H:i') }}</td>
            <td>{{ user.updatedAt|date('d-m-Y H:i')}}</td>
            <td>
                <a href="">Ver</a>
                <a href="">Editar</a>
                <a href="">Borrar</a>
            </td>
        </tr>  
    {% endfor %}
</table>

{% endblock %}